<?xml version="1.0" encoding="UTF-8"?>

<language-addon>
	<addon-name>texttab</addon-name> <!-- required -->

 	<version>
		<version-class>org.zkoss.fiddle.component.Version</version-class>
		<version-uid>0.8.0</version-uid>
		<zk-version>5.0.0</zk-version><!-- or later -->
	</version>

	<language-name>xul/html</language-name>
	<component>
		<component-name>texttab</component-name> <!-- required -->
		<component-class>org.zkoss.fiddle.component.Texttab</component-class> <!-- required -->
		<widget-class>zul.fiddle.Texttab</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/texttab.js</mold-uri>

			<!--
			== Tip in advance ==
				You don't have to specify a css.dsp if you need not ,
				but usually you need it.

				You could assign a .css file ,too.

				The css.dsp is almost as same as CSS file ,
				but have more powerful enhancement.	(like EL support.)
			====
			-->
			<css-uri>css/texttab.css.dsp</css-uri>
		</mold>
	</component>
</language-addon>
